extends ../layout
block content
    script.
      var challengeName = 'Email Signup'
       $(document).ready(function() {
        var password = document.getElementById("password")
        , confirm_password = document.getElementById("confirmpassword");
        function validatePassword(){
        if(password.value != confirm_password.value) {
        confirm_password.setCustomValidity("Passwords Don't Match");
        } else {
        confirm_password.setCustomValidity('');
        }
        }
        password.onchange = validatePassword;
        confirm_password.onkeyup = validatePassword;
        
         var eventusercode = document.getElementById("eventusercode")
        , confirmeventusercode = document.getElementById("confirmeventusercode");
        function validateEventCode(){
        if(eventusercode.value != confirmeventusercode.value) {
        confirmeventusercode.setCustomValidity("Order reference codes don't match");
        } else {
        confirmeventusercode.setCustomValidity('');
        }
        }
        eventusercode.onchange = validateEventCode;
        confirmeventusercode.onkeyup = validateEventCode;
        });
      
    h2.text-center Sign up here:
    form.form-horizontal(method='POST', action='/api/users', name="signupForm",id="signupForm")
        .row
           .col-sm-6.col-sm-offset-3
            .form-group
              input#email.input-lg.form-control(type='email', name='email', placeholder='Enter your email', autofocus='', required='', autocomplete='off')
            .input-group.form-group
              span.input-group-addon 20174195925 - 
              input#eventusercode.input-lg.form-control(type='text', name='eventusercode', placeholder='Order reference, e.g 3027315', required='', pattern='[0-9]{7}', title='Please enter a valid google io registration code.',maxlength="7")
            .input-group.form-group
              span.input-group-addon 20174195925 - 
              input#confirmeventusercode.input-lg.form-control(type='text', name='confirmeventusercode', placeholder='Confirm order reference.', required='', pattern='[0-9]{7}', title='Please enter a valid google io registration code.',maxlength="7")
            .form-group
              input#firstname.input-lg.form-control(type='text', name='firstname', placeholder='Enter your first name, e.g. Donald', required='', pattern='.{4,15}', title='First name should have at least 3 characters.')
            .form-group
              input#firstname.input-lg.form-control(type='text', name='lastname', placeholder='Enter your last name, e.g. Trump', required='', pattern='.{4,15}', title='Last name should have at least 3 characters.')           
            .form-group
              input#phoneno.input-lg.form-control(type='text', name='phoneno', placeholder='Enter your mobile number, e.g. 0712123456',  pattern='[0-9]{10}', title='Phone number should consists of 10 digits.',maxlength="10")
            .form-group
              input#password.input-lg.form-control(type='password', name='password', placeholder='Password', required='', pattern='.{8,50}', title='Must be at least 8 characters and no longer than 50 characters.')
            .form-group
              input#confirmpassword.input-lg.form-control(type='password', name='confirmpassword', placeholder='Confirm password', required='', pattern='.{8,50}', title='Must be at least 8 characters and no longer than 50 characters.')
            .form-group
              button.btn.btn-lg.btn-primary.btn-block(type='submit')
                span.ion-person-add
                | Signup
                
            .row
           .col-sm-6.col-sm-offset-3
               p.text-center
                   a(href="/email-signin") Click here if you already have an account and want to sign in.
